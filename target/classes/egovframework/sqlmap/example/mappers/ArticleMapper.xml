<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="egovframework.example.dao.ArticleDao">
    <select id="findAllArticle" resultType="egovframework.example.dto.ArticleDto">
        select id, title, memberid from article
    </select>
    <select id="findById"  resultType="egovframework.example.dto.ArticleDto">
        select * from article where id = #{id}
    </select>
    <delete id="deleteById" >
        delete from article where id=#{id}
    </delete>
    <insert id="save" parameterType="egovframework.example.dto.ArticleDto" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into article ( title, content, memberid ) values ( #{title}, #{content}, #{memberId} )
        returning id
    </insert>
    <select id="returningId" resultType="int">
        select currval('article_id_seq')
    </select>
    <update id="update" >
        update article set title=#{title}, content=#{content} where id=#{id}
    </update>

</mapper>